{
  "name": "Django dev container",
  "dockerComposeFile": "../docker-compose.dev.yml",
  "service": "backend",
  "customizations": {
    "vscode": {
      "settings": {
        "python.pythonPath": ".venv/bin/python",
        "mypy.runUsingActiveInterpreter": true
      },
      "extensions": [
        // Syntax highlight
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "tamasfe.even-better-toml",
        // Linters, formatters
        "matangover.mypy",
        "charliermarsh.ruff",
        "ms-python.black-formatter",
        // Django support
        "batisteo.vscode-django",
        "junstyle.vscode-django-support",
        // Other
        "zh9528.file-size"
      ]
    }
  },
  "shutdownAction": "none",
  "workspaceFolder": "/home/nkl/backend"
}
